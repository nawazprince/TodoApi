				{
					"name": "login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();\r",
									"\r",
									"// Set the token from the response to the variable\r",
									"if (response && response.data && response.data.token) {\r",
									"    // Save token to a collection variable named \"token\"\r",
									"    pm.collectionVariables.set(\"token\", response.data.token);\r",
									"    console.log(\"Token saved to collection variable:\", response.data.token);\r",
									"} else {\r",
									"    console.log(\"Token not found in response\");\r",
									"}\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"email\": \"abc@gmail.com\",\r\n\t\"password\": \"123456\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{BaseURL}}/api/auth/login",
							"host": [
